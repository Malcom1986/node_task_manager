extends ../layouts/application.pug

block header
  = t('layouts.application.labels')

block content
  a.btn.btn-primary.mb-5(href=route('newLabel'))= t('views.label.create')
  div.table-responsive
    table.table.table-borderless.table-striped.mt-5.bg-white
      thead
        tr
          th.py-3= t('views.label.id')
          th.py-3= t('views.label.name')
          th.py-3= t('views.label.createdAt')
          th
      tbody
        each label in labels
          tr
            td= label.id
            td= label.name
            td= formatDate(label.createdAt)
            td
              .d-flex
                a.btn.btn-primary.me-1(href=route('editLabel', { id: label.id }))= t('views.label.edit.submit')
                +buttonTo(route('label', { id: label.id }), 'delete')(class="btn btn-danger" value=t('views.label.delete.submit'))
